# ============================================
# Senoval Docker Environment Configuration
# Copy this file to .env and fill in your values
# ============================================

# ============ DATABASE ============
POSTGRES_USER=senoval
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=senoval

# ============ BACKEND ============
# Secret key for JWT tokens (generate a secure random string)
SECRET_KEY=your-super-secret-key-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Telegram notifications
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Yandex OAuth (https://oauth.yandex.ru/client/new)
YANDEX_CLIENT_ID=your_yandex_client_id
YANDEX_CLIENT_SECRET=your_yandex_client_secret
YANDEX_REDIRECT_URI=https://yourdomain.com/api/auth/yandex/callback

# YooKassa payments (optional)
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
YOOKASSA_RETURN_URL=https://yourdomain.com/booking/success
YOOKASSA_TEST_MODE=false

# Frontend URL for CORS
FRONTEND_URL=https://yourdomain.com

# Debug mode (set to true for verbose logging)
DEBUG=false

# ============ FRONTEND ============
# API URL for frontend to backend communication
# For local development: http://localhost:8000/api
# For production with nginx: https://yourdomain.com/api
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
